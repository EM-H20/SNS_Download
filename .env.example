# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8000
ENVIRONMENT=development

# Storage Configuration
DOWNLOAD_DIR=./downloads
MAX_FILE_SIZE_MB=100

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=10

GOOGLE_API_KEY=
UPSTAGE_API_KEY=

# Instagram Scraping Configuration
# Note: USER_AGENT는 코드에서 자동으로 다양한 브라우저 중 랜덤 선택됨 (차단 우회)
REQUEST_TIMEOUT_SECONDS=30
MAX_RETRIES=3

# Instagram Authentication (Multiple Account Rotation)
# 방법 1: 단일 계정 (하위 호환성)
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=

# 방법 2: 다중 계정 (권장 - 차단 회피)
# JSON 배열 형식으로 여러 계정 설정
# INSTAGRAM_ACCOUNTS_JSON=[{"username":"test1","password":"pass1"},{"username":"test2","password":"pass2"}]
INSTAGRAM_ACCOUNTS_JSON=

# Instagram Graph API (Optional - for business/creator accounts)
# Get these from: https://developers.facebook.com/apps/
INSTAGRAM_GRAPH_API_TOKEN=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
